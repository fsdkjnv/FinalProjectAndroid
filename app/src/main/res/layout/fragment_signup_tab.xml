<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C9359"
    android:orientation="vertical"
    tools:context=".fragment.FragmentLogin_Logout.ui.Signup_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
            android:id="@+id/welcome_to_"
            android:layout_width="411dp"
            android:layout_height="41dp"
            android:layout_gravity="start"
            android:layout_marginStart="25dp"
            android:layout_marginTop="74dp"
            android:fontFamily="@font/abel_regular"
            android:gravity="top"
            android:text="Welcome"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/grow_plants"
            android:layout_width="366dp"
            android:layout_height="52dp"
            android:layout_gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:textSize="19dp"
            android:text="Grow plants easily from your home with our award-winning pods"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/abel_regular"
            android:lineSpacingExtra="3sp" />

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="355dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:textColorHint="@android:color/white"
                android:backgroundTint="@android:color/white"
                android:textColor="#FFFFFF"
                android:hint="Email"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="355dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:textColor="#FFFFFF"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@android:color/white"
                android:backgroundTint="@android:color/white"
                android:padding="8dp" />

            <EditText
                android:id="@+id/signup_confirm"
                android:layout_width="355dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColorHint="@android:color/white"
                android:backgroundTint="@android:color/white"
                android:padding="8dp" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Register"
            android:textColor="#0C9359"
            android:background="@null"
            android:backgroundTint="#FFFFFF"

            android:fontFamily="@font/abel_regular"
            android:textSize="18sp"
            app:cornerRadius="3dp"
            android:textAllCaps="false" />



        <ImageView
            android:id="@+id/gestureImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
          android:layout_marginTop="130dp"

            android:src="@drawable/baseline_swipe_left_24"
            android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/abel_regular"
                android:gravity="top"
                android:text="Login again using the left"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
